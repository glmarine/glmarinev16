<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='default_taxes']/.." position="after">
                <div class="row mt16 o_settings_container" name="default_tax_exempted_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="tax_exempted_settings">
                        <div class="o_setting_left_pane">
                            <field name="tax_exempted" widget="upgrade_boolean"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="tax_exempted" string="Withholding Tax Exempted"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container" name="default_vat_tax_exempted_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="tax__vat_exempted_settings">
                        <div class="o_setting_left_pane">
                            <field name="vat_withholding_tax_exempted" widget="upgrade_boolean"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="vat_withholding_tax_exempted" string="Vat Withholding Tax Exempted"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
