<odoo>
    <data>
        <record id="paper_format_custom" model="report.paperformat">
            <field name="name">Custom Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">25</field>
            <field name="margin_left">4</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
        <record id="action_report_invoice_extended" model="ir.actions.report">
            <field name="name">Efris Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">report_efris.report_invoice_with_payment_extended</field>
            <field name="report_file">report_efris.report_invoice_with_payment_extended</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="report_efris.paper_format_custom"/>
        </record>
    </data>
</odoo>